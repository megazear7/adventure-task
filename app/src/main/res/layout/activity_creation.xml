<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="capgroup.adventuretask.Creation"
    android:orientation="vertical" >

    <TextView android:text="Forceful or Sophisticated" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forceful"
        android:id="@+id/q1_a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sophisticated"
        android:id="@+id/q1_b" />

    <TextView android:text="Long-winded or persevering" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Long-winded"
        android:id="@+id/q2_a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="persevering"
        android:id="@+id/q2_b" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/creation_submit" />

</LinearLayout>
